<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Contact</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li> <%= error.msg %> </li>
                  <% }) %>
                </ul>
              </div>
            <% } %>

            <form method="POST" action="/contact/update">
                <input type="hidden" name="oldName" value="<%= (contact.oldName) ? contact.oldName : contact.nama %>">
                <div class="mb-3">
                  <label for="nama">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" placeholder="Enter name" value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="nohp">No HP</label>
                  <input type="txt" class="form-control" id="nohp"  name="nohp" placeholder="Enter mobile phone" value="<%= contact.nohp %>">
                </div>
                <div class="mb-3">
                  <label for="emai">Email</label>
                  <input type="text" class="form-control" id="email"  name="email"  placeholder="Enter email" value="<%= contact.email %>">
                </div>
                
                <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
            </form>
        </div>
    </div>
</div>